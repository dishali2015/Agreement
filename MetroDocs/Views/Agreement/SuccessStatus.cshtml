
@{
    ViewBag.Title = "Success Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .center {
        margin: auto;
        height: 200px;
        width: 300px;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
    }
</style>

<div class="center card border-0">
    <div class="p-1">
        <h6 class="text-success">Agreement saved successfully</h6>
    </div>
    <div class="card">
        <ul class="list-group border-0">
            <li class="list-group-item list-group-item"> @Html.ActionLink("New Agreement", "CreateAgreement", "Agreement", null, new { @class = "btn btn-danger btn-sm btn-block" })</li>
            <li class="list-group-item list-group-item"> @Html.ActionLink("List of Agreement", "AgreementList", "Agreement", null, new { @class = "btn btn-danger btn-sm btn-block" })</li>
        </ul>
    </div>
</div>